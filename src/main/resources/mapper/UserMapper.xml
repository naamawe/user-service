<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xhx.userservice.mapper.UserMapper">

    <!-- 插入用户 -->
    <insert id="insertUser" parameterType="com.xhx.userservice.entiey.pojo.User">
        INSERT INTO users
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="email != null">email,</if>
            <if test="phone != null">phone,</if>
            <if test="gmtCreate != null">gmt_create,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="email != null">#{email},</if>
            <if test="phone != null">#{phone},</if>
            <if test="gmtCreate != null">#{gmtCreate},</if>
        </trim>
    </insert>

    <!-- 查询用户 -->
    <select id="findByUsername" resultType="com.xhx.userservice.entiey.pojo.User">
        select user_id, username, password, email, phone, gmt_create
        from users
        where username = #{username}
    </select>

    <select id="getUserById" resultType="com.xhx.userservice.entiey.pojo.User">
        select user_id, username, password, email, phone, gmt_create
        from users
        where user_id = #{userId}
    </select>

    <select id="getAllUser" resultType="com.xhx.userservice.entiey.pojo.User">
        select user_id, username, password, email, phone, gmt_create
        from users
    </select>

    <select id="getUsersByUserIds" resultType="com.xhx.userservice.entiey.pojo.User" parameterType="java.util.List">
        SELECT user_id, username, password, email, phone, gmt_create
        FROM users
        WHERE user_id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>
